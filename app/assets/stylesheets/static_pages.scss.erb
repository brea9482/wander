$white: #fff;

h3 {
  margin-top: 7px;
  margin-left: 5px;
}

.background-image {
  text-align: center;
  background: url('<%= asset_path("phones.jpg") %> ') no-repeat center center fixed;
  background-size: cover;
}

.search-bar-container {
  /* background: rgba(0, 0, 0, 0.8); */
  border-color: transparent;
  bottom: 0;
  left: 0;
  margin-bottom: 99px;
  position: absolute;
  right: 0;
  /* opacity:.36; */
}

.search-form {
  border: transparent;
  color: $white;
  input {
    background: rgba(0, 0, 0, 0.1);
    opacity: .8;
    color: $white;
  }
  ::-webkit-input-placeholder {
   color: $white;
  }
}

.home-header {
  color: $white;
  float: left;
  font-weight: bold;
}

.home-link {
  background: rgba(0, 0, 0, 0.3);
  opacity: .8;
  color: $white;
  position: absolute;
  bottom: 0;
  margin-bottom: 20px;
}

.wander-link:hover {
  text-decoration: none;
  color: $white
}
