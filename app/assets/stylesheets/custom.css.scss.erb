@import "bootstrap-sprockets";
@import "bootstrap";

$white: #fff;
$orange: #FE9A2E;
$blue: #0099CC;
$gray: #282828;

.container-body{
  padding-top: 30px;
  padding-left: 200px;
  padding-right: 200px;
}

.index-background-image {
  text-align: center;
  background: url('<%= asset_path("headphones_index.jpg") %> ') no-repeat center center fixed;
  background-size: cover;
}

.well {
  background: rgba(255,255,255,0.75);
}

.well hr {
  border-color: gray;
  margin-left: 100px;
  margin-right: 100px;
}

.playlist-color {
  background-color: $orange;
  border-color: $orange;
  color: $white;
  font-weight: bold;
}

.song-color {
  background-color: $orange;
  border-color: $orange;
  color: $white;
}

.flash-msg {
  margin-top: 60px
}

.search-bar {
  opacity: .8;
  color: black;
}

.comment {
  text-align: left;
  margin-left: 150px;
  margin-right: 150px;
}

#panel {
  display: none;
}

.names {
  color: $blue;
  font-weight: bolder;
  text-decoration: none;
}
.names:hover {
    color: $gray;
    text-decoration: none;
  }

.flash {
  margin-top: 5px;
}
