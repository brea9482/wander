@import "bootstrap-sprockets";
@import "bootstrap";

$white: #fff;
$orange: #FE9A2E;

.container-body{
  padding-top: 30px;
  padding-left: 200px;
  padding-right: 200px;
}

.index-background-image {
  text-align: center;
  background: url('<%= asset_path("headphones_index.jpg") %> ') no-repeat center center fixed;
  background-size: cover;
}

.well {
  background: rgba(255,255,255,0.75);
}

.well hr {
  border-color: gray;
  margin-left: 100px;
  margin-right: 100px;
}

.playlist-color {
  background-color: $orange;
  border-color: $orange;
  color: $white;
  font-weight: bold;
}

.song-color {
  background-color: $orange;
  border-color: $orange;
  color: $white;
}

.flash-msg {
  margin-top: 60px
}
