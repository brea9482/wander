<div>
  <%= form_for @playlist do |f| %>
    <div class="row">
      <div class="form-group col-sm-6">
        <%= f.label :name, "Playlist Name", class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Playlist Name" %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :description, "Playlist Description", class: "sr-only" %>
        <%= f.text_field :description, class: "form-control", placeholder: "Playlist Description" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-6 col-sm-offset-3">
        <%= f.submit "Submit new playlist!", class: "btn btn-default form-control" %>
      </div>
    </div>
  <% end %>
    <div class="clear"></div>
</div>
